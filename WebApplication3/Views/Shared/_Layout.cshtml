<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Christopher Jubell - My Game Dev Blog (Free materials)</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/site.css?v=@DateTime.Now">
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Reenie+Beanie" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dev vlog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Free Textures/models", "materials", "Home")</li>
                </ul>

                <ul class="nav navbar-nav hidden-xs" style="float:right">
                    <li><a>*13 free materials and counting!*</a></li>
                </ul>
            </div>


        </div>
    </div>
    @RenderSection("bannertype", required: false)
 
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12" id="black-pin" >
                <button type="button" class="close" id="close-pinned" style="font-size: 4em !important;color: white !important;" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="pinned-post">@RenderSection("pinnedpost", required: false)</div>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Christopher Jubell</p>
            <p>background pattern by <a href="https://www.heropatterns.com/">Steve Schoger</a> under <a href="https://creativecommons.org/licenses/by/4.0/">CC 4.</a></p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
